<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="mopidy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="server">
		<label>Mopidy Server</label>
		<description>Server from which data is being fetched.</description>

		<channels>
			<channel id="playback_state" typeId="playback_state" />
			<channel id="playback_track_name" typeId="playback_track_name" />
			<channel id="playback_track_album" typeId="playback_track_album" />
			<channel id="playback_volume" typeId="playback_volume" />
			<channel id="playback_volume_mute" typeId="playback_volume_mute" />
			<channel id="player" typeId="player" />
		</channels>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<label>Hostname or IP</label>
				<context>network-address</context>
				<description>Hostname or IP of the server.</description>
			</parameter>

			<parameter name="port" type="integer">
				<label>Port</label>
				<description>The port on which the server can be accessed.</description>
				<default>6680</default>
			</parameter>
		</config-description>
	</bridge-type>

	<channel-type id="playback_state">
		<item-type>String</item-type>
		<label>Playback State</label>
		<description>Playback State</description>
	</channel-type>
	<channel-type id="playback_track_name">
		<item-type>String</item-type>
		<label>Playback Track Name</label>
		<description>Name of the current playing track</description>
	</channel-type>
	<channel-type id="playback_track_album">
		<item-type>String</item-type>
		<label>Playback Track Album</label>
		<description>Name of the current playing album</description>
	</channel-type>
	<channel-type id="playback_volume">
		<item-type>Dimmer</item-type>
		<label>Playback Volume</label>
		<description>Current playback volume</description>
	</channel-type>
	<channel-type id="playback_volume_mute">
		<item-type>Switch</item-type>
		<label>Playback Volume Mute</label>
		<description>Current playback mute state</description>
	</channel-type>
	<channel-type id="player">
		<item-type>Player</item-type>
		<label>Player</label>
		<description>Player Control</description>
	</channel-type>

</thing:thing-descriptions>
