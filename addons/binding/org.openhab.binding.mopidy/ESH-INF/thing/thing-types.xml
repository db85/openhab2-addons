<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="mopidy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="server">
		<label>Mopidy Server</label>
		<description>Server from which data is being fetched.</description>

		<channels>
			<channel id="playback_state" typeId="playback_state" />
			<channel id="playback_track_name" typeId="playback_track_name" />
			<channel id="playback_track_album" typeId="playback_track_album" />
			<channel id="playback_track_artist" typeId="playback_track_artist" />
			<channel id="playback_volume" typeId="playback_volume" />
			<channel id="playback_volume_mute" typeId="playback_volume_mute" />
			<channel id="player" typeId="player" />
			<channel id="playback_stop" typeId="playback_stop" />
			<channel id="playback_length" typeId="playback_length" />
			<channel id="playback_progress" typeId="playback_progress" />
			<channel id="playlist_repeat" typeId="playlist_repeat" />
		</channels>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<label>Hostname or IP</label>
				<context>network-address</context>
				<description>Hostname or IP of the server.</description>
			</parameter>

			<parameter name="port" type="integer">
				<label>Port</label>
				<description>The port on which the server can be accessed.</description>
				<default>6680</default>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="playlist">
		<supported-bridge-type-refs>
			<bridge-type-ref id="server" />
		</supported-bridge-type-refs>

		<label>Mopidy Playlist</label>
		<description>Created playlist in mopidy</description>

		<channels>
			<channel id="name" typeId="playlist_name" />
			<channel id="last_modified" typeId="playlist_last_modified" />
			<channel id="play" typeId="playlist_play" />
		</channels>

		<config-description>
			<parameter name="uri" type="text" required="true">
				<label>Uri</label>
				<description>Playlist uri</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="playback_state">
		<item-type>String</item-type>
		<label>Playback State</label>
		<description>Playback State</description>
	</channel-type>
	<channel-type id="playback_track_name">
		<item-type>String</item-type>
		<label>Playback Track Name</label>
		<description>Name of the current playing track</description>
	</channel-type>
	<channel-type id="playback_track_album">
        <item-type>String</item-type>
        <label>Playback Track Album</label>
        <description>Album of the current playing track</description>
    </channel-type>
        <channel-type id="playback_track_artist">
        <item-type>String</item-type>
        <label>Playback Track Artist</label>
        <description>Artist of the current playing track</description>
    </channel-type>
	<channel-type id="playback_volume">
		<item-type>Dimmer</item-type>
		<label>Playback Volume</label>
		<description>Current playback volume</description>
	</channel-type>
	<channel-type id="playback_volume_mute">
		<item-type>Switch</item-type>
		<label>Playback Volume Mute</label>
		<description>Current playback mute state</description>
	</channel-type>
	<channel-type id="playback_stop">
	   <item-type>Switch</item-type>
		<label>Stop Playback</label>
		<description>Stop current playback</description>
	</channel-type>
	<channel-type id="playback_length">
        <item-type>Number</item-type>
        <label>Playback Length</label>
        <description>Current playback length</description>
    </channel-type>
    <channel-type id="playback_progress">
        <item-type>Number</item-type>
        <label>Playback Progress</label>
        <description>Current playback progress</description>
    </channel-type>
	<channel-type id="player">
		<item-type>Player</item-type>
		<label>Player</label>
		<description>Player Control</description>
	</channel-type>
	<channel-type id="playlist_name">
		<item-type>String</item-type>
		<label>Name</label>
		<description>Name of the playlist</description>
	</channel-type>
	<channel-type id="playlist_last_modified">
		<item-type>DateTime</item-type>
		<label>Last modified</label>
		<description>Last modified</description>
	</channel-type>
	<channel-type id="playlist_play">
		<item-type>Switch</item-type>
		<label>Play</label>
		<description>Toggle to play playlist</description>
	</channel-type>
	   <channel-type id="playlist_repeat">
        <item-type>Switch</item-type>
        <label>Repeat</label>
        <description>Toggle to repeat playlist</description>
    </channel-type>

</thing:thing-descriptions>
