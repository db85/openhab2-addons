	<thing-type id="sensordevice">
		<supported-bridge-type-refs>
			<bridge-type-ref id="parrotflowerapi" />
		</supported-bridge-type-refs>

		<label>Parrot Flower Sensor Device</label>
		<description>A connected garden location.</description>

		<channel-groups>
			<channel-group typeId="general" id="general" />
			<channel-group typeId="fertilizer" id="fertilizer" />
			<channel-group typeId="air_temperature" id="air_temperature" />
			<channel-group typeId="light" id="light" />
			<channel-group typeId="watering" id="watering" />
			<channel-group typeId="battery" id="battery" />
		</channel-groups>

		<config-description>
			<parameter name="identifier" type="text" required="true">
				<label>identifier </label>
				<description>parrot flower sensor identifier</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-group-type id="fertilizer">
		<label>Fertilizer</label>
		<description>Fertilizer status</description>
		<channels>
			<channel id="instruction_key" typeId="instruction_key" />
			<channel id="status_key" typeId="status_key" />
			<channel id="analysis_datetime_utc" typeId="analysis_datetime_utc" />
			<channel id="predicted_action_datetime_utc" typeId="predicted_action_datetime_utc" />
			<channel id="current_value" typeId="current_value" />
			<channel id="max_threshold" typeId="max_threshold" />
			<channel id="min_threshold" typeId="min_threshold" />
		</channels>
	</channel-group-type>

